@model IEnumerable<UI_USM_MVC.Models.Client>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Member";
}

@section Styles {
    <link href="~/css/Members/Members.css" rel="stylesheet" />
    <style>
        /* Style for the three dots and dropdown */
        .dropdown-menu {
            position: absolute;
            z-index: 1000;
            display: none;
        }
        .show-dropdown {
            display: block;
        }
        .three-dots {
            cursor: pointer;
            font-size: 20px;
        }
    </style>
}

<main>
    <div class="container-fluid px-0">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="h4">Clients list <span class="badge bg-secondary" id="clientCount">@Model.Count()</span></h1>
            <div>
                <button class="btn btn-outline-secondary me-2">Options</button>
                <button class="btn btn-dark" onclick="location.href='@Url.Action("AddClient", "Members")'">Add</button>
            </div>
        </div>
        <div class="mb-3 d-flex justify-content-between">
            <div class="input-group" style="width: 70%;">
                <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                <input type="text" class="form-control" id="searchInput"
                    placeholder="Search by name, email or mobile number">
            </div>
            <button class="btn btn-outline-secondary">Filters</button>
            <select class="form-select" style="width: 20%;">
                <option>Created at (newest first)</option>
            </select>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th><input type="checkbox" id="selectAllCheckbox"></th>
                    <th>Client name</th>
                    <th>Mobile number</th>
                    <th>Reviews</th>
                    <th>Sales</th>
                    <th>Created at</th>
                    <th>Actions</th> <!-- New column for actions -->
                </tr>
            </thead>
            <tbody id="clientsTableBody">
                @foreach (var client in Model)
                {
                    <tr id="client-@client.ClientId">
                        <td><input type="checkbox" class="client-checkbox"></td>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="client-avatar me-2">@client.FirstName?[0]</div>
                                <div>
                                    <div class="client-name" id="name">@client.FirstName @client.LastName</div>
                                    <div class="text-muted client-email" id="email">@client.Email</div>
                                </div>
                            </div>
                        </td>
                        <td class="client-mobile" id="mobile">@client.Mobile</td>
                        <td>-</td>
                        <td>-</td>
                        <td>@DateTime.Now.ToString("dd MMM yyyy")</td>
                        <td>
                            <!-- New actions column with three dots -->
                            <div class="dropdown">
                                <span class="three-dots">...</span>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="@Url.Action("EditClient", "Members", new { id = client.ClientId })">Edit</a>
                                    <a class="dropdown-item delete-client" href="javascript:void(0)" data-client-id="@client.ClientId">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Members/Members.js"></script> <!-- External JS file -->
    <script src="~/js/Schedule/jquery-1.10.2.js" type="text/javascript"></script>
    
}
