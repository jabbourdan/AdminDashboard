<div>
    <section id="reminders" class="container">
        <h2>Reminders</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title"><i class="fas fa-bell reminders-icon"></i> 24 hours upcoming appointment reminder</h6>
                        <p class="card-text">Notifies clients reminding them of their upcoming appointment.</p>
                        <div class="dropdown">
                            <button onclick="toggleDropdown(event)" class="btn btn-primary">
                                @ViewBag.TwentyFourHourReminder <i class="fas fa-chevron-down"></i>
                            </button>
                            <div class="dropdown-content">
                                <a href="#" onclick="setDropdownValue(event, 'Enabled')" data-reminder-type="TwentyFourHourReminder">Enable</a>
                                <a href="#" onclick="setDropdownValue(event, 'Disabled')" data-reminder-type="TwentyFourHourReminder">Disable</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h6 class="card-title"><i class="fas fa-bell reminders-icon"></i> 1 hour upcoming appointment reminder</h6>
