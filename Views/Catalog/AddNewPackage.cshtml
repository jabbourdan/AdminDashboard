@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add New Package";
}

@section Styles {
    <link href="~/CSS/Catalog/AddNewService.css" rel="stylesheet" />
    <link href="~/CSS/Catalog/AddNewPackage.css" rel="stylesheet" />
}

<div class="container">
    <div class="header">
        <h2>Basic Package Details</h2>
    </div>

    <div class="form-group">
        <label for="packageName">Package Name</label>
        <input type="text" id="packageName" maxlength="255" placeholder="Add a package name, e.g., Hair & Nails Package">
    </div>

    <div class="form-group">
        <label for="packageCategory">Package Category</label>
        <input type="text" id="packageCategory" maxlength="255" placeholder="Add a package category">
    </div>

    <div class="form-group">
        <label for="packageDescription">Description (Optional)</label>
        <textarea id="packageDescription" rows="4" maxlength="1000" placeholder="Add a short description"></textarea>
        <small class="char-counter" id="packageDescriptionCounter">0/1000</small>
    </div>

    <!-- New Services Section -->
    <div class="service-section">
        <h3 class="service-header">Services</h3>
        <p class="service-description">Select which services to include in this package.</p>

        <!-- Dropdown for selecting services -->
        <select id="serviceSelect" class="form-control" onchange="addSelectedService()">
            <option value="">Select a service...</option>
        </select>

        <div id="serviceList" class="service-list">
            <!-- Dynamic list of selected services will be added here -->
        </div>
    </div>

    <div class="header">
        <h2>Pricing and Duration</h2>
    </div>

    <div class="form-group">
        <label for="packageDuration">Duration</label>
        <select id="packageDuration">
            <option value="30m">30m</option>
            <option value="1h">1h</option>
            <option value="1h 30m">1h 30m</option>
        </select>
    </div>

    <div class="form-group">
        <label for="packagePrice">Price</label>
        <input type="number" id="packagePrice" placeholder="0.00" min="0" step="0.01">
    </div>

    <div class="form-group">
        <label for="packageSale">Sale</label>
        <input type="number" id="packageSale" placeholder="Default" min="0" step="0.01">
    </div>

    <div class="form-actions">
        <button class="btn btn-success" id="savePackageButton" type="button">Save Package</button>
        <button class="btn btn-secondary" id="cancelPackageButton" type="button">Cancel</button>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>
    <script src="~/js/Catalog/AddPackage.js"></script>
}
